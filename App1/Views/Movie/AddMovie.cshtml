@{
    ViewData["Title"] = "Add a Movie";
}

<div>
    <h1>Add A Movie</h1>
    <form action="Create" method="post" id="add-movie-form">
        <label for="title">Title</label>
        <input type="text" name="title"/>

        <label for="director">Director</label>
        <input type="text" name="director" />

        <label for="releaseDate">Release Date</label>
        <input type="date" name="releaseDate" />

        <label for="genre">Genre</label>
        <input type="text" name="genre" />

        <label for="duration">Duration of Film</label>
        <input type="text" name="duration" placeholder="0h 0m"/>

        <label for="summary">Summary</label>
        <textarea form="add-movie-form" name="summary" placeholder="Enter Text Here"></textarea>

        <input type="submit" />
    </form>
</div>